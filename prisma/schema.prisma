// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id        String  @id @default(uuid())
  email     String  @unique
  password  String
  name      String
  role      String
  avatar    String
  wallpaper String
  posts     Posts[]
  comments  Comments[]

  @@map("users")
}

model Posts {
  id           String   @id @default(uuid())
  id_owner     String
  owner        Users    @relation(fields: [id_owner], references: [id])
  content      String
  published_at DateTime @default(now())
  link         String
  tags         String[]
  likes_count  Int
  comments     Comments[]

  @@map("posts")
}

model Comments {
  id           String   @id @default(uuid())
  id_owner     String
  owner        Users    @relation(fields: [id_owner], references: [id])
  id_post      String
  post         Posts    @relation(fields: [id_post], references: [id])
  message      String
  published_at DateTime @default(now())
  likes_count  Int

  @@map("comments")
}
